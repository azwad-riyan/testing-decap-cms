---
// ProductModal.astro
---

<div id="product-modal" class="fixed inset-0 z-[100] hidden flex items-center justify-center px-4">
    <!-- Overlay/Background Blur -->
    <div id="modal-overlay" class="absolute inset-0 bg-black/80 backdrop-blur-sm transition-opacity duration-300 opacity-0"></div>

    <!-- Modal Content -->
    <div id="modal-content" class="relative bg-[#1a1a1a] border border-accent/20 w-full max-w-4xl max-h-[90vh] overflow-y-auto transform scale-95 opacity-0 transition-all duration-300 grid md:grid-cols-2 shadow-2xl">
        <!-- Close Button -->
        <button id="close-modal" class="absolute top-4 right-4 z-10 text-muted hover:text-accent transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
        </button>

        <!-- Image Section -->
        <div class="relative h-64 md:h-auto bg-black">
            <img id="modal-image" src="" alt="Product" class="w-full h-full object-cover opacity-90" />
        </div>

        <!-- Details Section -->
        <div class="p-8 md:p-12 flex flex-col justify-center">
            <span id="modal-stock" class="inline-block text-[10px] uppercase tracking-[0.2em] text-accent mb-2 px-2 py-1 border border-accent/20 w-max">In Stock</span>
            
            <h2 id="modal-title" class="text-3xl md:text-4xl font-serif text-cream mb-2">Product Name</h2>
            <p id="modal-size" class="text-muted text-sm uppercase tracking-widest mb-6">50ml</p>

            <div class="space-y-6 mb-8">
                <p id="modal-description" class="text-cream/80 font-light leading-relaxed">
                    Description goes here.
                </p>
                
                <!-- Notes -->
                <div class="space-y-2 text-sm border-t border-white/5 pt-4">
                    <div class="flex">
                        <span class="text-accent w-24 uppercase text-[10px] tracking-widest pt-1">Top Notes</span>
                        <span id="modal-top-notes" class="text-muted flex-1">Note 1, Note 2</span>
                    </div>
                    <div class="flex">
                        <span class="text-accent w-24 uppercase text-[10px] tracking-widest pt-1">Middle Notes</span>
                        <span id="modal-middle-notes" class="text-muted flex-1">Note 1, Note 2</span>
                    </div>
                    <div class="flex">
                        <span class="text-accent w-24 uppercase text-[10px] tracking-widest pt-1">Base Notes</span>
                        <span id="modal-base-notes" class="text-muted flex-1">Note 1, Note 2</span>
                    </div>
                </div>

                <div class="text-2xl font-medium text-cream pt-2">
                    à§³<span id="modal-price">0</span>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="grid gap-3">
                <a id="whatsapp-btn" href="#" target="_blank" class="flex items-center justify-center space-x-2 bg-[#25D366] hover:bg-[#20bd5a] text-white py-3 px-6 transition-colors duration-300 uppercase tracking-widest text-xs font-semibold">
                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.008-.57-.008-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/></svg>
                    <span>Order via WhatsApp</span>
                </a>
                
                <a id="facebook-btn" href="#" target="_blank" class="flex items-center justify-center space-x-2 bg-[#1877F2] hover:bg-[#1565c0] text-white py-3 px-6 transition-colors duration-300 uppercase tracking-widest text-xs font-semibold">
                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M9.101 23.691v-7.98H6.627v-3.667h2.474v-1.58c0-4.085 1.848-5.978 5.858-5.978.401 0 .955.042 1.468.103a8.68 8.68 0 0 1 1.141.195v3.325a8.623 8.623 0 0 0-.653-.036c-2.148 0-2.797 1.603-2.797 2.87v1.12h5.374l-.275 3.667h-4.986v7.98c-5.08 0-6.708-4.526-6.708-4.526h1.274z"/></svg>
                    <span>Order via Messenger</span>
                </a>
            </div>
        </div>
    </div>
</div>

<script>
    // Modal Interaction Logic
    const modal = document.getElementById('product-modal');
    const overlay = document.getElementById('modal-overlay');
    const content = document.getElementById('modal-content');
    const closeBtn = document.getElementById('close-modal');

    function openModal(productData) {
        if (!modal || !overlay || !content) return;

        // Populate Data
        const set = (id, val) => {
            const el = document.getElementById(id);
            if (el) el.textContent = val;
        };

        set('modal-title', productData.title);
        set('modal-description', productData.description);
        set('modal-price', productData.price);
        set('modal-size', productData.size);
        set('modal-stock', productData.stock);
        set('modal-top-notes', productData.top_notes);
        set('modal-middle-notes', productData.middle_notes);
        set('modal-base-notes', productData.base_notes);

        const img = document.getElementById('modal-image') as HTMLImageElement;
        if (img) img.src = productData.image;

        // WhatsApp Link Logic
        const waBtn = document.getElementById('whatsapp-btn') as HTMLAnchorElement;
        if (waBtn) {
            const message = `I want to order ${productData.title}`;
            // Remove non-numeric chars for raw number, assume 880 format provided
            const phone = productData.whatsapp_number.replace(/\D/g, ''); 
            waBtn.href = `https://wa.me/${phone}?text=${encodeURIComponent(message)}`;
        }

        // Facebook Link Logic
        const fbBtn = document.getElementById('facebook-btn') as HTMLAnchorElement;
        if (fbBtn) {
            fbBtn.href = productData.facebook_link; // Usually just the page URL or m.me link
        }

        // Show Modal
        modal.classList.remove('hidden');
        // Small delay to allow display flow to update, then animate opacity
        requestAnimationFrame(() => {
            overlay.classList.remove('opacity-0');
            content.classList.remove('opacity-0', 'scale-95');
            content.classList.add('opacity-100', 'scale-100');
        });
        document.body.style.overflow = 'hidden'; // Prevent background scroll
    }

    function closeModal() {
        if (!modal || !overlay || !content) return;

        overlay.classList.add('opacity-0');
        content.classList.remove('opacity-100', 'scale-100');
        content.classList.add('opacity-0', 'scale-95');

        setTimeout(() => {
            modal.classList.add('hidden');
            document.body.style.overflow = '';
        }, 300); // Wait for transition
    }

    // Event Listeners
    document.addEventListener('DOMContentLoaded', () => {
        // Delegate click for view details buttons
        document.body.addEventListener('click', (e) => {
            const target = (e.target as Element).closest('.view-details-btn');
            if (target) {
                const data = JSON.parse(target.getAttribute('data-product') || '{}');
                openModal(data);
            }
        });

        closeBtn?.addEventListener('click', closeModal);
        overlay?.addEventListener('click', closeModal);
        
        // Escape key to close
        document.addEventListener('keydown', (e) => {
            if (e.key === 'Escape') closeModal();
        });
    });
</script>
