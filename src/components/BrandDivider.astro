<section class="py-20 relative overflow-hidden">
    <div class="container mx-auto px-6 text-center reveal">
        <!-- Decorative lines -->
        <div class="flex items-center justify-center gap-6 md:gap-10">
            <div class="flex-1 max-w-[120px] h-px bg-gradient-to-r from-transparent to-accent/30"></div>
            
            <div class="flex flex-col items-center gap-3">
                <!-- Small accent diamond -->
                <div class="w-2 h-2 bg-accent/60 rotate-45"></div>
                
                <!-- Brand motto -->
                <h2 class="font-serif text-3xl md:text-5xl lg:text-6xl text-cream/90 tracking-[0.08em] leading-tight" style="font-weight: 400;">
                    Crafted to Feel
                </h2>
                
                <!-- Subtitle -->
                <p class="text-muted text-xs md:text-sm uppercase tracking-[0.3em] font-sans mt-1">
                    The Art of Fragrance
                </p>
                
                <!-- Small accent diamond -->
                <div class="w-2 h-2 bg-accent/60 rotate-45 mt-1"></div>
            </div>
            
            <div class="flex-1 max-w-[120px] h-px bg-gradient-to-l from-transparent to-accent/30"></div>
        </div>
    </div>
</section>
