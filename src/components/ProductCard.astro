---
import type { CollectionEntry } from 'astro:content';

interface Props {
  product: CollectionEntry<'products'>;
}

const { product } = Astro.props;
const { data, slug } = product;
---

<div
  class="product-card group relative overflow-hidden"
  data-card
>
  <!-- Shine overlay for 3D effect -->
  <div class="card-shine"></div>

  <!-- Image Container -->
  <div class="card-image-wrap">
    <img
      src={data.image}
      alt={data.title}
      class="card-img"
      loading="lazy"
    />
    <!-- Dark scrim on hover -->
    <div class="card-scrim"></div>

    <!-- Accord badge on image -->
    <div class="card-accord-badge">
      {data.accords}
    </div>
  </div>

  <!-- Product Info -->
  <div class="card-body">
    <!-- Title -->
    <h3 class="card-title">{data.title}</h3>

    <!-- Price: show lowest only -->
    <div class="card-price-row">
      <span class="card-price-from">From</span>
      <span class="card-price">৳{data.price_6ml}</span>
    </div>

    <!-- View Details Button -->
    <a
      href={`#${slug}`}
      class="view-details-btn card-btn"
      data-product={JSON.stringify({...data, slug})}
    >
      <span class="card-btn-text">View Details</span>
      <span class="card-btn-arrow">→</span>
    </a>
  </div>

  <!-- Product Schema (SEO) -->
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org/",
    "@type": "Product",
    "name": data.title,
    "image": `https://scenter.com.bd${data.image}`,
    "description": `Buy authentic ${data.title} perfume oil in Bangladesh. Top notes: ${data.top_notes}. Heart notes: ${data.heart_notes}. Base notes: ${data.base_notes}.`,
    "brand": { "@type": "Brand", "name": "SCENTER" },
    "offers": {
      "@type": "AggregateOffer",
      "url": `https://scenter.com.bd/#${slug}`,
      "priceCurrency": "BDT",
      "lowPrice": data.price_6ml,
      "highPrice": data.price_15ml,
      "availability": "https://schema.org/InStock"
    }
  })} />
</div>

<style>
  /* ─── Card Shell ─────────────────────────────────── */
  .product-card {
    position: relative;
    border-radius: 16px;
    cursor: pointer;
    transform-style: preserve-3d;
    transition:
      transform 0.5s cubic-bezier(0.23, 1, 0.32, 1),
      box-shadow 0.5s ease,
      border-color 0.3s ease;

    /* Warm dark card */
    background: #1a1714;
    box-shadow:
      0 2px 8px rgba(0,0,0,0.3),
      0 1px 2px rgba(0,0,0,0.2);
    border: 1px solid rgba(198,167,94,0.06);
  }

  /* ─── Hover: only for real pointer devices (no touch) ───── */
  @media (hover: hover) and (pointer: fine) {
    .product-card:hover {
      transform: translateY(-8px) scale(1.02);
      box-shadow:
        0 20px 60px rgba(198,167,94,0.12),
        0 8px 24px rgba(0,0,0,0.4);
      border-color: rgba(198,167,94,0.15);
    }
    .product-card:hover .card-shine { opacity: 1; }
    .product-card:hover .card-img { transform: scale(1.08); }
    .product-card:hover .card-scrim { opacity: 1; }
    .product-card:hover .card-accord-badge {
      opacity: 1;
      transform: translateY(0);
    }
    .card-btn:hover {
      background-position: right center;
      box-shadow: 0 6px 20px rgba(198,167,94,0.5);
      transform: translateY(-1px);
      color: #0a0800;
    }
    .card-btn:hover .card-btn-arrow { transform: translateX(4px); }
  }

  /* ─── Shine (3D gloss hit) ────────────────────────── */
  .card-shine {
    position: absolute;
    inset: 0;
    border-radius: 16px;
    background: linear-gradient(
      135deg,
      rgba(198,167,94,0.08) 0%,
      rgba(198,167,94,0) 55%
    );
    opacity: 0;
    transition: opacity 0.4s ease;
    pointer-events: none;
    z-index: 2;
  }

  /* ─── Image ───────────────────────────────────────── */
  .card-image-wrap {
    position: relative;
    aspect-ratio: 1 / 1;
    overflow: hidden;
    border-radius: 16px 16px 0 0;
  }
  .card-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.7s cubic-bezier(0.23, 1, 0.32, 1);
    display: block;
  }

  .card-scrim {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to bottom,
      rgba(0,0,0,0) 40%,
      rgba(13,11,8,0.6) 100%
    );
    opacity: 0;
    transition: opacity 0.4s ease;
  }

  .card-accord-badge {
    position: absolute;
    bottom: 12px;
    left: 12px;
    right: 12px;
    font-size: 0.65rem;
    font-weight: 500;
    letter-spacing: 0.12em;
    text-transform: uppercase;
    color: rgba(255,255,255,0.92);
    background: rgba(198,167,94,0.65);
    backdrop-filter: blur(6px);
    -webkit-backdrop-filter: blur(6px);
    border-radius: 6px;
    padding: 5px 10px;
    text-align: center;
    opacity: 0;
    transform: translateY(8px);
    transition: opacity 0.35s ease, transform 0.35s ease;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    z-index: 3;
  }

  /* ─── Body ───────────────────────────────────────── */
  .card-body {
    padding: 20px 20px 22px;
    display: flex;
    flex-direction: column;
    gap: 10px;
  }

  /* ─── Title ──────────────────────────────────────── */
  .card-title {
    font-family: 'Playfair Display', serif;
    font-size: 1.3rem;
    font-weight: 600;
    line-height: 1.25;
    letter-spacing: 0.01em;
    margin: 0;
    color: #f5f2eb;
  }

  /* ─── Price ──────────────────────────────────────── */
  .card-price-row {
    display: flex;
    align-items: baseline;
    gap: 5px;
    font-size: 0.95rem;
    font-weight: 500;
    color: #c6a75e;
  }
  .card-price-from {
    font-size: 0.72rem;
    font-weight: 400;
    color: #9a9387;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  /* ─── Button ─────────────────────────────────────── */
  .card-btn {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 11px 18px;
    border-radius: 10px;
    font-size: 0.75rem;
    font-weight: 600;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    text-decoration: none;
    margin-top: 4px;
    position: relative;
    overflow: hidden;
    transition:
      background 0.3s ease,
      color 0.3s ease,
      box-shadow 0.3s ease,
      transform 0.2s ease;

    /* Gradient button — warm gold to amber */
    background: linear-gradient(135deg, #c6a75e 0%, #e8c87a 50%, #c6a75e 100%);
    background-size: 200% 200%;
    background-position: left center;
    color: #1a1200;
    box-shadow: 0 3px 12px rgba(198,167,94,0.25);
  }

  .card-btn-arrow {
    transition: transform 0.3s ease;
  }
</style>

<script>
  /* 3D tilt — only on real pointer (mouse) devices, never on touch */
  if (window.matchMedia('(hover: hover) and (pointer: fine)').matches) {
    document.querySelectorAll<HTMLElement>('[data-card]').forEach(card => {
      card.addEventListener('mousemove', (e: MouseEvent) => {
        const rect = card.getBoundingClientRect();
        const dx = (e.clientX - (rect.left + rect.width / 2))  / (rect.width  / 2);
        const dy = (e.clientY - (rect.top  + rect.height / 2)) / (rect.height / 2);
        card.style.transform = `translateY(-8px) scale(1.02) rotateX(${-dy * 5}deg) rotateY(${dx * 5}deg)`;
      });
      card.addEventListener('mouseleave', () => { card.style.transform = ''; });
    });
  }
</script>
